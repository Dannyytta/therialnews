<p style="color: green"><%= notice %></p>

<%= render @comment %>


<div>
  <%if current_user.id == @comment.user.id %>
    <%= link_to "Edit this comment", edit_news_comment_path(@comment) %>
  <%end%>
  <%if admin_user%>
    <%= button_to "Destroy this comment", news_comment_path(@comment), method: :delete %>
  <%end%>
  <%= link_to "Back to comment", news_path(@comment.news) %>
</div>